{% extends 'base.html.twig' %}

{% block title %}Mapa z informacjami o pogodzie{% endblock %}

{% block stylesheets %}
    <style type="text/css">
      #map {
        height: 500px;
      }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <script
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA0OzBPA_oceksOOJcHUYXPrMXU4VNPGac&callback=initMap"
      defer
    ></script>
    <script src="{{ asset('js/show_map.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}

<div class="container">

    <h1>Mapa z informacjami o pogodzie</h1>
    <div class="py-5 text-left">

        <h3>Kliknij w wybrane miejsce, aby sprawdzić aktualną pogodę</h3>

        <div id="map"></div>

        <div class="modal fade" id="weatherModal">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                <div class="modal-header">
                    <h4 class="modal-title">Informacje o pogodzie</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Zamknij</button>
                </div>

                </div>
            </div>
        </div>

    </div>

</div>

{% endblock %}
